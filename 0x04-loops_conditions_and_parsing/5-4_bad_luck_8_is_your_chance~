#!/usr/bin/env bash
#This script prints bad and good luck respectively for 4 and 8
#Other iterations print Best School
count=1
while [ $count -le 10 ]; do
      if [ $count -eq 4 ]; then
      	 echo "bad luck"
      elif [ $count -eq 8 ]; then
      	   echo "good luck"
      fi
      count=$((count + 1))
done
